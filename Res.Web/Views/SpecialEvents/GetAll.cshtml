@model IEnumerable<Res.Data.Entities.SpecialEvent>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="row">
    <div class="col-12">
        <div class="card" style="height:800px;">
            <div class="card-body">
                <h4 class="card-title"></h4>

                <div class="table-responsive">
                    <table id="default_order" class="table table-striped table-bordered display no-wrap"
                           style="width:100%">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Event Img</th>
                                <th>Description</th>
                                <th>Event Price</th>
                                 <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventImg)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EventPrice)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                                </td>

                            </tr>

                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
