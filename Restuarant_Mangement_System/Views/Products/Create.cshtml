            <div class="form-group">
                <label asp-for="@Model.Product.ShortDes" class="control-label"></label>
                <input asp-for="@Model.Product.ShortDes" class="form-control" />
                <span asp-validation-for="@Model.Product.ShortDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.LongDes" class="control-label"></label>
                <input asp-for="@Model.Product.LongDes" class="form-control" />
                <span asp-validation-for="@Model.Product.LongDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.ProductImg" class="control-label"></label>
